                </mapping>
                <mapping>
                    <value>144</value>
                    <newvalue>CONFIGURED-SHIELDED</newvalue>
                </mapping>
            </mappings>
        </value_map>
        <value_map>
            <name>LSI MegaRAID VD State</name>
            <mappings>
                <mapping>
                    <value>0</value>
