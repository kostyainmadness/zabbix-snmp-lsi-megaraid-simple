                </mapping>
                <mapping>
                    <value>32</value>
                    <newvalue>copyback</newvalue>
                </mapping>
                <mapping>
                    <value>65</value>
                    <newvalue>system</newvalue>
                </mapping>
                <mapping>
                    <value>128</value>
                    <newvalue>UNCONFIGURED-SHIELDED</newvalue>
                </mapping>
                <mapping>
                    <value>130</value>
